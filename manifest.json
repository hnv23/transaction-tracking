{
  "manifest_version": 3,
  "name": "Transaction Tracking",
  "version": "0.2.0",
  "permissions": ["storage", "tabs", "scripting", "activeTab", "cookies"],
  "host_permissions": [
    "*://*.acb.com.vn/*",
    "*://*.vpbank.com.vn/*",
    "*://*.tpb.vn/*",
    "*://*.techcombank.com.vn/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://neo.vpbank.com.vn/*"],
      "js": ["contentVpBank.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Transaction Tracking"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://neo.vpbank.com.vn/*"]
    }
  ]
}
