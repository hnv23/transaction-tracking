{
  "manifest_version": 3,
  "name": "Transaction Tracking",
  "version": "0.2.0",
  "permissions": ["storage", "tabs", "scripting", "activeTab", "cookies"],
  "host_permissions": [
    "*://*.acb.com.vn/*",
    "*://*.vpbank.com.vn/*",
    "*://*.tpb.vn/*",
    "*://*.techcombank.com.vn/*",
    "https://acb.duckhero.store/*",
    "https://n8n.hocduthu.com/webhook/*",
    "*://business.facebook.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://neo.vpbank.com.vn/*"],
      "js": ["contentVpBank.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://acb.duckhero.store/trigger*"],
      "js": ["contentTrigger.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://acb.duckhero.store/check-bill-fb*"],
      "js": ["contentTriggerBillFb.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://business.facebook.com/billing_hub/payment_activity*"],
      "js": ["contentFacebookBill.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://online.acb.com.vn/*"],
      "js": ["contentACB.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Transaction Tracking"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://neo.vpbank.com.vn/*"]
    }
  ]
}
